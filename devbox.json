{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.10.6/.schema/devbox.schema.json",
  "packages": [
    "curl@8.7.1",
    "nano@7.2",
    "vim@9.1.0200",
    "zsh@5.9",
    "git@2.44.0",
    "tmux@3.4",
    "awscli2@2.15.43",
    "go@1.22.2",
    "golangci-lint@1.58.0",
    "jq@1.7.1",
    "yq@3.4.3",
    "kubectl@1.30.0",
    "k3d@5.6.0",
    "k9s@0.32.4",
    "tldr@1.6.1",
    "kubernetes-helm@3.14.4"
  ],
  "env": {
    "PATH":      "/usr/local/go/bin:$PATH",
    "ZSH_THEME": "norm"
  },
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox for bbctl!'",
      "export GOPATH=$HOME/go",
      "export PATH=$GOPATH/bin:$PATH",
      "alias k=kubectl",
      "alias g=git",
      "alias ll='ls -alF'",
      "mkdir -p $GOPATH/bin",
      "mkdir -p $GOPATH/src",
      "mkdir -p $GOPATH/pkg"
    ],
    "scripts": {
      "gitalias": [
        "curl https://raw.githubusercontent.com/GitAlias/gitalias/main/gitalias.txt -o ~/.gitalias.txt && git config include.path ~/.gitalias.txt"
      ]
    }
  }
}
